.image_good {
    background-image: url("<%= asset_path('good.png') %>");
    background-repeat: no-repeat;
    background-size: 30px;
    background-position: center;
    background-color: #ffffff;
    display:inline-block;
    border: solid 1px;
    padding: 15px;
}

/* show */
div.show {
    background-color: #d7ffd7;
    background-size:cover;
}
h1.show-title {
    text-align: center;
}
.show-container {
    margin: 10px;
    margin-left: auto;
    margin-right: auto;
    max-width: 800px;
}
.show-container.show-question {
    margin-bottom: 80px;
}

.show-box {
    background-color: #fff;
    border: solid 3px;
    border-radius: 10px;
    padding: 10px;
    box-shadow: 0 5px 5px 0 rgba(0, 0, 0, 0.3);
    
}

.show-box div {
    display: flex;
    word-break: break-all;
}
.show-box > div:not(:last-child){
    border-bottom: solid 1px;
}
.show-header {
    font-weight: bold;
    display: flex;
    align-items: center;
    font-size: 20px;
}
.show-header span {
    border: solid 1px;
    border-radius: 50%;
    font-size: 1px;
    height: 10px;
    width: 10px;
    padding: 5px;
    display: inline-block;
    line-height: 10px;
    text-align: center;
}
.show-footer {
    display: flex;
    align-items: center;
    justify-content: flex-end;
}
.show-footer div {
   margin: 5px;
}
.show-box-contents {
    flex-direction: column;
    min-height: 100px;
}
.show-box-contents textarea {
    resize: none;
    width: 100%;
}

.show-box-name > div:first-child {
    flex-basis:20%;
}
.show-box-name > div:last-child {
    flex-basis:60%;
    justify-content: center;
}
.show-box-name > div:last-child::after {
    flex-basis:20%;
}
.show-box-name input {
    outline: none;
    border: none;
    text-align: center;
    width: 100%;
}


.show-box-title > div:first-child {
    flex-basis:20%;
}
.show-box-title > div:last-child {
    flex-basis:60%;
    justify-content: center;
}
.show-box-title > div:last-child::after{
    flex-basis:20%;
}

.show-add-button {
    width: 100px;
    margin: 5px;
}

.show-index-link {
    display: block;
    text-align: right;
}

.show-do-answer .show-box .show-box-contents > div:last-child {
    flex-grow: 1;
}

.show-container.show-do-answer {
    margin-top: 80px
}